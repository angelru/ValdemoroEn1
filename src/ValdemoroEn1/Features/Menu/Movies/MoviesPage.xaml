<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ValdemoroEn1.Features.MoviesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ValdemoroEn1.Controls"
    xmlns:features="clr-namespace:ValdemoroEn1.Features"
    xmlns:fontawesome="clr-namespace:ValdemoroEn1.FontAwesome"
    xmlns:localization="clr-namespace:ValdemoroEn1.Resources.Localization"
    xmlns:models="clr-namespace:ValdemoroEn1.Models"
    Title="{localization:Translate CinemaListings}"
    x:DataType="features:MoviesPageViewModel">
    <controls:StateLayout
        Padding="16"
        CurrentState="{Binding BaseState}"
        ErrorCommand="{Binding ShowMoviesCommand}">
        <controls:StateLayout.SuccessContent>
            <Label HorizontalTextAlignment="Center" Text="{Binding Name}" />
            <Picker
                Title="{localization:Translate SelectDate}"
                Margin="0,0,0,8"
                ItemsSource="{Binding Dates}"
                SelectedItem="{Binding SelectedDate}" />
            <CollectionView
                ItemsSource="{Binding Movies}"
                SelectionMode="None"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="20" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Movie">
                        <Grid
                            Padding="0"
                            BackgroundColor="{StaticResource White}"
                            ColumnDefinitions="120,*"
                            CompressedLayout.IsHeadless="true"
                            RowDefinitions="*,auto"
                            Style="{StaticResource GridGeneral}">
                            <Image
                                Grid.RowSpan="1"
                                Grid.Column="0"
                                Aspect="AspectFill"
                                Source="{Binding Cover}" />
                            <Grid
                                Grid.RowSpan="1"
                                Grid.Column="1"
                                Padding="0"
                                CompressedLayout.IsHeadless="true"
                                RowDefinitions="auto,*,auto">
                                <VerticalStackLayout
                                    Grid.Row="0"
                                    Margin="0,0,0,6"
                                    CompressedLayout.IsHeadless="true"
                                    Spacing="6">
                                    <Label Text="{Binding Title}" />
                                    <Label Text="{Binding Duration, StringFormat='{0} min'}" />
                                    <Label Text="{localization:Translate SelectHour}" />
                                </VerticalStackLayout>
                                <ScrollView
                                    Grid.Row="1"
                                    HorizontalScrollBarVisibility="Never"
                                    Orientation="Horizontal">
                                    <HorizontalStackLayout
                                        BindableLayout.ItemsSource="{Binding Sessions}"
                                        CompressedLayout.IsHeadless="true"
                                        Spacing="6"
                                        VerticalOptions="Start">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="models:Session">
                                                <Button
                                                    BackgroundColor="{StaticResource BlueGeneral}"
                                                    Clicked="Button_Clicked"
                                                    CommandParameter="{Binding Ticket}"
                                                    Text="{Binding Hour}"
                                                    TextColor="{StaticResource White}" />
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </HorizontalStackLayout>
                                </ScrollView>
                                <Button
                                    Grid.Row="2"
                                    Margin="0,6,0,0"
                                    BackgroundColor="{StaticResource BlueGeneral}"
                                    Clicked="Button_Clicked"
                                    CommandParameter="{Binding Trailer}"
                                    HorizontalOptions="Start"
                                    Text="{localization:Translate Trailer}"
                                    TextColor="{StaticResource White}">
                                    <Button.ImageSource>
                                        <FontImageSource
                                            FontFamily="FontAwesomeSolid"
                                            Glyph="{Static fontawesome:FontAwesomeIcons.Film}"
                                            Size="24"
                                            Color="{StaticResource White}" />
                                    </Button.ImageSource>
                                </Button>
                            </Grid>
                            <Label
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="0,10,0,0"
                                Text="{Binding Synopsis}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </controls:StateLayout.SuccessContent>
    </controls:StateLayout>
</ContentPage>