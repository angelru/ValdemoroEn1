<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ValdemoroEn1.Features.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ValdemoroEn1.Controls"
    xmlns:features="clr-namespace:ValdemoroEn1.Features"
    xmlns:localization="clr-namespace:ValdemoroEn1.Resources.Localization"
    Title="{localization:Translate Signup}"
    x:DataType="features:RegisterPageViewModel"
    Shell.FlyoutBehavior="Disabled">
    <VerticalStackLayout Padding="16" Spacing="16">
        <Label FontSize="45" Text="{localization:Translate JoinValdemoro}" />
        <Entry Placeholder="{localization:Translate FullName}" Text="{Binding FullName}" />
        <Entry
            Keyboard="Email"
            Placeholder="{localization:Translate Email}"
            Text="{Binding Email}" />
        <Entry
            IsPassword="True"
            Placeholder="{localization:Translate Password}"
            Text="{Binding Password}" />
        <controls:TermsView />
        <Button
            Clicked="Button_Clicked"
            Command="{Binding RegisterCommand}"
            Style="{StaticResource ButtonGeneral}"
            Text="{localization:Translate Signup}" />
    </VerticalStackLayout>
</ContentPage>