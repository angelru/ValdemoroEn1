<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ValdemoroEn1.Features.NewsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:features="clr-namespace:ValdemoroEn1.Features"
    xmlns:localization="clr-namespace:ValdemoroEn1.Resources.Localization"
    Title="{localization:Translate News}"
    x:DataType="features:NewsPageViewModel">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="{Binding NewsNotification.Title}"
            VerticalOptions="Center" />
        <Label
            HorizontalOptions="Center"
            Text="{Binding NewsNotification.Summary}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>