<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ValdemoroEn1.Features.NewsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ValdemoroEn1.Controls"
    xmlns:features="clr-namespace:ValdemoroEn1.Features"
    xmlns:localization="clr-namespace:ValdemoroEn1.Resources.Localization"
    Title="{localization:Translate News}"
    x:DataType="features:NewsPageViewModel">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="6">
            <controls:CardView Title="{Binding NewsNotifications.Title}">
                <controls:CardView.CardContent>
                    <Label Text="{Binding NewsNotifications.Summary}" />
                </controls:CardView.CardContent>
            </controls:CardView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>