<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ValdemoroEn1.Controls.FlyoutHeaderView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        BackgroundColor="{StaticResource RedGeneral}"
        HeightRequest="200"
        RowDefinitions="*, 1">

        <VerticalStackLayout Grid.Row="0" VerticalOptions="Center">
            <Border
                HeightRequest="84"
                StrokeThickness="1"
                WidthRequest="84">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="100,100,100,100" />
                </Border.StrokeShape>
                <Image Aspect="AspectFill" Source="{Binding PhotoUrl}" />
            </Border>
            <Label
                HorizontalTextAlignment="Center"
                Text="{Binding Name}"
                TextColor="White" />
            <Label
                HorizontalTextAlignment="Center"
                Text="{Binding Email}"
                TextColor="White" />
        </VerticalStackLayout>

        <BoxView
            Grid.Row="1"
            HeightRequest="1"
            Color="{StaticResource BlueGeneral}" />
    </Grid>
</ContentView>
